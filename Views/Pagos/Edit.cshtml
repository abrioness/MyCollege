@model WebColegio.Models.ViewModel.PagosViewModel
@{
    ViewData["Title"] = "Editar Pago";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h5 class="m-0 font-weight-bold"><i class="bi bi-pencil-square"></i> Editar Pago</h5>
        </div>
        <div class="card-body">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-@(TempData["Tipo"]?.ToString() ?? "info") alert-dismissible fade show" role="alert">
                    @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Edit" method="post" id="formEditPago">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Pago.IdPago" />
                <input type="hidden" asp-for="Pago.UsuarioRegistro" />
                <input type="hidden" asp-for="Pago.FechaRegistro" />
                <input type="hidden" asp-for="Pago.Serie" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdAlumno" class="form-label">Alumno <span class="text-danger">*</span></label>
                            <select asp-for="Pago.IdAlumno" class="form-select" required>
                                <option value="">-- Seleccione un Alumno --</option>
                                @foreach (var alumno in Model.alumnos)
                                {
                                    <option value="@alumno.IdAlumno" selected="@(alumno.IdAlumno == Model.Pago.IdAlumno)">
                                        @alumno.Nombre @alumno.Apellido - @alumno.Cedula
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdAlumno" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdTipoMovimiento" class="form-label">Tipo de Movimiento <span class="text-danger">*</span></label>
                            <select asp-for="Pago.IdTipoMovimiento" class="form-select" required>
                                <option value="">-- Seleccione Tipo de Movimiento --</option>
                                @foreach (var item in Model.tipoMovimientoSelectListItem)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdTipoMovimiento" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.NumeroRecibo" class="form-label">Número de Recibo</label>
                            <input asp-for="Pago.NumeroRecibo" class="form-control" type="number" />
                            <span asp-validation-for="Pago.NumeroRecibo" class="text-danger"></span>
                        </div>
                    </div>

                    @* <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.Anyo" class="form-label">Año</label>
                            <input asp-for="Pago.Anyo" class="form-control" type="number" min="2020" max="2100" />
                            <span asp-validation-for="Pago.Anyo" class="text-danger"></span>
                        </div>
                    </div> *@

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdMes" class="form-label">Mes</label>
                            <select asp-for="Pago.IdMes" class="form-select">
                                <option value="">-- Seleccione Mes --</option>
                                @foreach (var mes in Model.meses)
                                {
                                    <option value="@mes.IdMes" selected="@(mes.IdMes == Model.Pago.IdMes)">
                                        @mes.Mes
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdMes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.Monto" class="form-label">Monto <span class="text-danger">*</span></label>
                            <input asp-for="Pago.Monto" class="form-control" type="number" step="0.01" min="0" required />
                            <span asp-validation-for="Pago.Monto" class="text-danger"></span>
                        </div>
                    </div>

                    @* <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.Mora" class="form-label">Mora</label>
                            <input asp-for="Pago.Mora" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Pago.Mora" class="text-danger"></span>
                        </div>
                    </div> *@

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.FechaEmision" class="form-label">Fecha de Emisión</label>
                            <input asp-for="Pago.FechaEmision" class="form-control" type="date" />
                            <span asp-validation-for="Pago.FechaEmision" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdTipoRecibo" class="form-label">Tipo de Recibo <span class="text-danger">*</span></label>
                            <select asp-for="Pago.IdTipoRecibo" class="form-select" required>
                                <option value="">-- Seleccione Tipo de Recibo --</option>
                                @foreach (var item in Model.tipoRecibosSelectListItem)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdTipoRecibo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdMetodoPago" class="form-label">Método de Pago <span class="text-danger">*</span></label>
                            <select asp-for="Pago.IdMetodoPago" class="form-select" required>
                                <option value="">-- Seleccione Método de Pago --</option>
                                @foreach (var item in Model.metodoPagoSelectListItem)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdMetodoPago" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdPeriodo" class="form-label">Período <span class="text-danger">*</span></label>
                            <select asp-for="Pago.IdPeriodo" class="form-select" required>
                                <option value="">-- Seleccione Período --</option>
                                @foreach (var item in Model.periodo)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdPeriodo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdGrado" class="form-label">Grado <span class="text-danger">*</span></label>
                            <select asp-for="Pago.IdGrado" class="form-select" required>
                                <option value="">-- Seleccione Grado --</option>
                                @foreach (var item in Model.gradosSelectListItem)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdGrado" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdRecinto" class="form-label">Recinto</label>
                            <select asp-for="Pago.IdRecinto" class="form-select">
                                <option value="">-- Seleccione Recinto --</option>
                                @foreach (var item in Model.recintos)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdRecinto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.IdModalidad" class="form-label">Modalidad</label>
                            <select asp-for="Pago.IdModalidad" class="form-select">
                                <option value="">-- Seleccione Modalidad --</option>
                                @foreach (var item in Model.modalidadSelectListItem)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Pago.IdModalidad" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="Pago.Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Pago.Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Pago.Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-check mb-3">
                            <input asp-for="Pago.Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Pago.Activo" class="form-check-label">
                                Activo
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Pago.IdPago" class="btn btn-info">
                        <i class="bi bi-eye"></i> Ver Detalles
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Validación del formulario
            $('#formEditPago').on('submit', function (e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}

