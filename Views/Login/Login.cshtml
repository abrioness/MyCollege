            <input type="text" asp-for="usuario.NombreUsuario" id="user" required placeholder="Ejemp:0011910910011N"/>
            <label asp-for="usuario.Password">Contraseña</label>
            <input type="password" asp-for="usuario.Password" id="password" required placeholder="Contraseña">
            <input type="submit" id="submit" value="Ingresar">

            @* ¿No tienes una Cuenta?<a href="@Url.Action("Create","Usuarios")"> Registrar!</a> *@
        </form>
