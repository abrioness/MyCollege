@model WebColegio.Models.ViewModel.pagoCajasViewModel

@{
    Layout = null;
    ViewData["Title"] = "Impresión de Recibo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recibo de Caja - @Model.PagosCaja.NumeroRecibo</title>
    <style>
        /* CONTENEDOR estilo voucher */
        .voucher {
            width: 260px; /* tamaño típico de voucher/ticket */
            padding: 10px;
            margin: auto;
            font-family: "Courier New", monospace;
            font-size: 13px;
            border: 1px solid #000;
        }

        /* Encabezado */
        .v-header {
            text-align: center;
            border-bottom: 1px dashed #000;
            padding-bottom: 8px;
        }

            .v-header .title {
                font-weight: bold;
                font-size: 14px;
            }

            .v-header .sub {
                font-size: 12px;
            }

        /* Secciones */
        .v-section {
            border-bottom: 1px dashed #000;
            margin-top: 6px;
            padding-bottom: 6px;
        }

        /* Filas */
        .v-row {
            padding: 2px 0;
        }

        .center {
            text-align: center;
        }

        .bold {
            font-weight: bold;
        }

        /* Firma */
        .firma {
            margin-top: 15px;
            text-align: center;
        }

            .firma .line {
                border-top: 1px solid #000;
                width: 80%;
                margin: auto;
                margin-bottom: 4px;
            }

            .firma .txt {
                font-size: 12px;
            }

        /* Botón imprimir */
        .print-button {
            margin-top: 15px;
            padding: 6px 12px;
            font-size: 14px;
            cursor: pointer;
        }

        @@media print {
            .no-print {
                display: none;
            }
            /* Ajustar todo al ancho del voucher */
            .voucher {
                border: none;
                width: 220px;
            }
        }
    </style>
</head>
<body>
    <div class="voucher">


        <!-- Encabezado -->
        <div class="v-header">
            <div class="title">COLEGIO PARROQUIAL SAN FRANCISCO JAVIER</div>
            <div class="sub">VICARIA DE EDUCACIÓN CATÓLICA</div>
            <div class="sub">Ciudad Sandino, Plaza Padre Miguel, 2c. al Norte, Zona #4 Managua</div>
        </div>

        <div class="v-section">
            <div class="v-row center bold">RECIBO DE CAJA</div>
            <div class="v-row">Serie: <span>@Model.PagosCaja.Serie</span></div>
            <div class="v-row">N°: <span>@Model.PagosCaja.NumeroRecibo</span></div>
        </div>

        @{
           
            var grado = Model.grados?.FirstOrDefault(a => a.IdGrado == Model.PagosCaja.IdGrado);
            var tipoMovimiento = Model.tipoMovimiento?.FirstOrDefault(a => a.IdTipoMovimiento == Model.PagosCaja.Concepto);
            var turno = Model.turnos?.FirstOrDefault(a => a.IdTurno == Model.PagosCaja.IdTurno);
            var fecha = Model.PagosCaja.FechaRegistro=DateTime.Now;
            // var fechaemision=Model.PagosCaja.fe
        }
        <div class="v-section">
            <div class="v-row"><b>Recibí de:</b> <span>@Model.PagosCaja.Nombre</span></div>
            <div class="v-row"><b>Nivel:</b> <span>@grado?.NombreGrado</span></div>
            @* <div class="v-row"><b>Fec Emisión:</b> <span>C$ @Model.PagosCaja.FechaEmision</span></div> *@
            <div class="v-row"><b>Fecha Pago:</b> <span>C$ @Model.PagosCaja.FechaRegistro.ToString("dd/MM/yyyy")</span></div>
            <div class="v-row"><b>Concepto:</b> <span>@tipoMovimiento?.Concepto, @Model.PagosCaja.Descripcion</span></div>
            <div class="v-row"><b>Turno:</b> <span>@turno?.NombreTurno</span></div>
            <div class="v-row"><b>La cantidad de:</b> <span>C$ @Model.PagosCaja.Monto.ToString("N2")</span></div>
           @*  <div class="v-row"><b>En letras:</b><br />@Model.cantidadEnLetras (C$ @Model.PagosCaja.Monto)</div> *@
        </div>
          
       
        <!-- Fecha -->
        <div class="v-section center">
            Managua: @fecha.Day de
            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(fecha.Month)
            del 20@{@fecha.ToString("yy")}
        </div>

        <!-- Firma -->
        <div class="firma">
            <div class="line"></div>
            <div class="txt">Firma y Sello del Cajero</div>
            <div class="txt">
                @Model.listPagoCaja.FirstOrDefault(a => a.UsuarioRegistro == Model.PagosCaja.UsuarioRegistro)
            </div>
        </div>
    </div>

    
    <div class="no-print center">
        <button class="print-button " onclick="window.print()">🖨️ Imprimir</button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

    </div>


   
</body>

</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
<script src="~/js/limpiarcampos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["Mensaje"] != null)
{
    <script>
        Swal.fire({
            title: '@TempData["Tipo"]',
            text: '@TempData["Mensaje"]',
            icon: '@TempData["Tipo"]'
        });
    </script>
}