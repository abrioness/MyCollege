@model WebColegio.Models.ViewModel.NotasViewModel

<script src="~/js/site.js"></script>

@* <script src="~/js/limpiarcampos.js"></script> *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container mt-auto" style="padding:2px;">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-mortarboard-fill"></i> Detalles de  Nota</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-1">
                @* <img src="data:image/jpeg;base64,@Convert.ToBase64String(Alumnos)" class="img-fluid rounded-circle mb-3 ml-5" style="width: 150px; height: 150px" /> *@
            </div>
            <div class="col-6">
                <h2>@Model.alumnoNotas.Nombre @Model.alumnoNotas.Apellido</h2>
                <b>Dirección:</b>
                <span> @Model.alumnoNotas.Direccion</span>

                <br>
                <b>Periodo: </b> <span>@Model.periodoSelectListItem.FirstOrDefault(a => a.Value == Model.alumnoNotas.IdPeriodo.ToString())?.Text</span>
                <br />
                <b>Modalidad: </b> <span>@Model.modalidadSelectListItem.FirstOrDefault(a => a.Value == Model.alumnoNotas.IdModalidad.ToString())?.Text</span>
                <br>
                <b>Nivel: </b> <span>@Model.gradosSelectListItem.FirstOrDefault(a => a.Value == Model.alumnoNotas.IdGrado.ToString())?.Text</span>
                <br>
                @*  <b>Estado Civil: </b> <span>@empleado.estadCivil</span> *@
                <b>Sexo: </b> <span>@Model.sexoSelectListItem.FirstOrDefault(a => a.Value == Model.alumnoNotas.IdSexo.ToString())?.Text</span>
                @* foreach (var religion in Model.religion.Where(x => x.idReligion == empleado.fkReligion))
                {
                    <br>
                    <b>Religión: </b> <span>@religion.nombre</span>

                } *@
            </div>
        </div>
        <br />
            <div class="table-responsive" style="font-size: 12px;">
                <table id="detalleNotas" class="table justify-content-lg-between table-bordered  small" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Asignatura
                    </th>
                    <th>
                        Acum I
                    </th>
                    <th>
                        Exam I
                    </th>
                    <th>
                        Corte I
                    </th>
                    <th>
                        Acum II
                    </th>
                    <th>
                        Exam II
                    </th>
                    <th>
                        Corte II
                    </th>
                    <th>
                        Acum III
                    </th>
                    <th>
                        Exam III
                    </th>
                    <th>
                        Corte III
                    </th>
                    <th>
                        Acum IV
                    </th>
                    <th>
                        Exam IV
                    </th>
                    <th>
                        Corte IV
                    </th>
                    <th>
                        NF
                    </th>
                </tr>

            </thead>
            <tbody>

               
    @foreach(var nota in Model.listNotas){
    <tr>
        
						
        <td>
                          @Model.asignaturaSelectListItem.FirstOrDefault(a => a.Value == nota.IdAsignatura.ToString())?.Text 
        </td>
                        <td>
                            @nota.Acumulado1
                        </td>
                        <td>
                            @nota.Examen1
                        </td>
        <td>
                        @nota.PrimerCorte
        </td>
                        <td>
                            @nota.Acumulado2
                        </td>
                        <td>
                            @nota.Examen2
                        </td>
        <td>
                        @nota.SegundoCorte
        </td>
                        <td>
                            @nota.Acumulado3
                        </td>
                        <td>
                            @nota.Examen3
                        </td>
        <td>
                        @nota.TercerCorte
        </td>
                        <td>
                            @nota.Acumulado4
                        </td>
                        <td >
                            @nota.Examen4
                        </td>
        <td>
                        @nota.CuartoCorte
        </td>
        <td>
                        @nota.NotaFinal
        </td>
    </tr>
    }            
</tbody>

</table>

    

    </div>
    </div>
    </div>
    </div>
  

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
