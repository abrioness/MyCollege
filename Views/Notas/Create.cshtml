<div class="container mt-6">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil"></i> Registro de Notas</h4>
        </div>
        <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
               <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="notas.IdAlumno">Nombre del Alumno</label>
                                <input type="text" id="AlumnoNombre" class="form-control" placeholder="Buscar alumno..." />
                                <input type="hidden" id="IdAlumno" name="notas.IdAlumno" />
                            </div>
           
                <div class="form-group">
                    <label asp-for="notas.IdTipoEvaluacion" class="control-label">Tipo de Evaluación</label>
                                
                                    <select asp-for="notas.IdTipoEvaluacion" asp-items="Model.tipoEvaluacionesSelectListItem" class="form-select" required>
                                        <option disabled selected>Seleccione la Evaluación</option>
                                    </select>
                                    <span asp-validation-for="notas.IdTipoEvaluacion" class="text-danger"></span>
                </div>
            <div class="form-group">
                                <label asp-for="notas.IdPeriodo" class="control-label">Periodo de Evaluación</label>
                                <select asp-for="notas.IdPeriodo" asp-items="Model.periodoEvaluacionsSelectListItem" class="form-select" required>
                                    <option disabled selected>Seleccione la Evaluación</option>
                                </select>
                                <span asp-validation-for="notas.IdPeriodo" class="text-danger"></span>
                
            </div>
                    <div class="form-group">
                        <label asp-for="notas.IdAsignatura" class="control-label">Asignatura</label>
                                <select asp-for="notas.IdAsignatura" asp-items="Model.asignaturaSelectListItem" class="form-select" required>
                                    <option disabled selected>Seleccione la Evaluación</option>
                                </select>
                                <span asp-validation-for="notas.IdAsignatura" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Descripcion" class="control-label">Observación</label>
                                <textarea name="Descripcion" class="form-control"> </textarea>
                                @* <span asp-validation-for="Descripcion" class="text-danger"></span> *@
                            </div>
                            </div>
                <div class="col-lg-6">
            <div class="form-group">
                        <label asp-for="notas.PrimerCorte" class="control-label">Primer Corte</label>
                                <input asp-for="notas.PrimerCorte" id="primerCorte" class="form-control" />
                                <span asp-validation-for="notas.PrimerCorte" class="text-danger"></span>
            </div>
                        
                        
             <div class="form-group">
                                <label asp-for="notas.SegundoCorte" class="control-label">Segundo Corte</label>
                                <input asp-for="notas.SegundoCorte" id="segundoCorte" class="form-control" />
                                <span asp-validation-for="notas.SegundoCorte" class="text-danger"></span>
            </div>
                    <div class="form-group">
                                <label asp-for="notas.TercerCorte" class="control-label">Tercer Corte</label>
                                <input asp-for="notas.TercerCorte" id="tercerCorte" class="form-control" />
                                <span asp-validation-for="notas.TercerCorte" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                                <label asp-for="notas.CuartoCorte" class="control-label">Cuarto Corte</label>
                                <input asp-for="notas.CuartoCorte" id="cuartoCorte" class="form-control" />
                                <span asp-validation-for="notas.CuartoCorte" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                                <label asp-for="notas.NotaFinal" class="control-label">Nota Final</label>
                                <input asp-for="notas.NotaFinal" id="notaFinal" class="form-control" disabled />
                        @* <span asp-validation-for="CuartoCorte" class="text-danger"></span> *@
                    </div>
            
                        
            <br />
						</div>
					</div>
                    <br />
                    <!-- Botones -->
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>

        </form>
        </div>
    </div>
</div>
