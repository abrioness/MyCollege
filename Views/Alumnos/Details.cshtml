@model WebColegio.Models.ViewModel.AlumnosViewModel

@{
    ViewData["Title"] = "Hoja de Matrícula";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    
    <link href="~/css/hojamatricula.css" rel="stylesheet" />
</head>
<body >
    <div class="container p-3" >

        <div class="text-center mb-3">
            @{
                var recinto = Model.recintosSelectListItem
                .FirstOrDefault(s => s.Value == Model.alumnos.IdRecinto.ToString());
            }
            @{
                var periodo = Model.periodoSelectListItem
                .FirstOrDefault(s => s.Value == Model.alumnos.IdPeriodo.ToString());
            }
            @{
                var modalidad = Model.modalidadesSelectListItem
                .FirstOrDefault(s => s.Value == Model.alumnos.IdModalidad.ToString());
            }
            <div class="header" style=" display: flex; justify-content: space-between; align-items: center; text-align: center; color: white;  padding: 1px 90px;">
                <img src="~/image/colegiosanfrancisco.png" alt="izquierda" class="logo-izquierda" style="width:12%;margin-left:55px">
                <div class="titulo" style="flex: 1;">
                    <h5 >
                        <strong>
                            @recinto?.Text
                        </strong>
                    </h5>
                    @{
                        int periodoActual = 0;
                        if (Convert.ToInt32(@periodo.Text) == DateTime.Now.Year)
                        {
                            periodoActual = Convert.ToInt32(@periodo.Text)+1;
                        }
                        else
                        {
                             @periodo.Text// debe agregar el nombre completo colegio parroquil
                        }

                    }
                    <h6>HOJA DE MATRÍCULA DE @modalidad?.Text  @periodoActual</h6>
                </div>
            </div>
            <hr />
            @{
                var today = DateTime.Now;
            }
            <div class="titulo d-flex justify-content-end flex-fill" style="margin-left:155px;">
                <h6 class="mb-0">Fecha en que se presentó al centro a matricularse  DÍA: @today.Day MES: @today.Month AÑO: @today.Year</h6>
            </div>

        </div>

        <!-- I. DATOS DEL ESTUDIANTE -->
        <fieldset class="p-3 mb-auto">
            <legend class="w-auto px-2"><strong>I. DATOS PERSONALES DEL ESTUDIANTE</strong></legend>

            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta">Nombres:</div>
                    <div class="valor">@Model.alumnos.Nombre</div>


                </div>
            </div>
            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta">Apellidos:</div>
                    <div class="valor">@Model.alumnos.Apellido</div>
                </div>
            </div>

            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Fecha de Nacimiento:</strong></div>
                    <div class="valor">@Model.alumnos.FechaNacimiento?.ToString("dd/MM/yyyy")</div>

                    @* <div class="col-md-3"><strong>Partida Nacimiento:</strong></div>
            <div class="col-md-3">@((Model.PartidaNacimiento) ? "Sí" : "No")</div> *@
                </div>
            </div>

            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Sexo:</strong></div>

                    <div class="valor">
                        @{
                            var sexo = Model.sexosSelectListItem
                            .FirstOrDefault(s => s.Value == Model.alumnos.IdSexo.ToString());
                        }
                        @sexo?.Text
                    </div>
                </div>
            </div>
            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Teléfono:</strong></div>
                    <div class="valor">@Model.alumnos.Telefono</div>
                </div>
            </div>

            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Departamento:</strong></div>
                    <div class="valor">@Model.alumnos.Departamento</div>
                </div>
            </div>
            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Municipio:</strong></div>
                    <div class="valor">@Model.alumnos.Municipio</div>
                </div>
            </div>

            <!-- COLUMNA IZQUIERDA -->
            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta">Dirección:</div>
                    <div class="valor">@Model.alumnos.Direccion</div>
                </div>
            </div>

            <!-- COLUMNA DERECHA -->
            <div class="col-md-4 columna-derecha">
                <div class="fila-interna">
                    <div class="etiqueta">Peso:</div>
                    <div class="valor">@Model.alumnos.Peso</div>
                </div>

                <div class="fila-interna">
                    <div class="etiqueta">Talla:</div>
                    <div class="valor">@Model.alumnos.Talla</div>
                </div>
            </div>

        </fieldset>

        <!-- II. PADRES O TUTOR -->
