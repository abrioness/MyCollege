            <legend class="w-auto px-2"><strong>II. DATOS PERSONALES DE LOS PADRES O TUTOR</strong></legend>

            <div class="col-md-4 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Nombre y Apellido de la Madre:</strong></div>
                    <div class="valor">@Model.alumnos.NombreMadre</div>
                </div>  
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Número de Cédula de la Madre:</strong> </div>
                    <div class="valor">@Model.alumnos.CedulaMadre</div>
                </div>
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Teléfono de la Madre:</strong></div>
                    <div class="valor"> @Model.alumnos.TelefonoMadre </div>
                </div>
            </div>


            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Nombre y Apellido del Padre:</strong> </div>
                    <div class="valor">@Model.alumnos.NombrePadre</div>
                    <div class="etiqueta"><strong>Número de Cédula del Padre:</strong></div>
                    <div class="valor"> @Model.alumnos.CedulaPadre</div>
                    <div class="etiqueta"><strong>Teléfono del Padre:</strong> </div>
                    <div class="valor">@Model.alumnos.TelefonoPadre</div>
                </div>
            </div>
            <div class="col-md-8 columna-izquierda">
                <div class="fila-interna">
                    <div class="etiqueta"><strong>Nombre y Apellido del Tutor:</strong> </div>
                    <div class="valor">@Model.alumnos.NombreTutor</div>
                    <div class="etiqueta"><strong>Número de Cédula del Tutor:</strong> </div>
