<div class="container mt-6">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil"></i> Registro del Inventario</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-4">
                        @* <div class="form-group">
                            <label asp-for="Inventario.i">Nombre del Alumno</label>
                            <input type="text" id="AlumnoNombre" class="form-control" placeholder="Buscar alumno..." />
                            <input type="hidden" id="IdAlumno" name="notas.IdAlumno" />
                        </div> *@

                        <div class="form-group">
                            <label asp-for="Inventario.IdProducto" class="control-label">Producto</label>

                            <select asp-for="Inventario.IdProducto" asp-items="Model.ListaProductos" class="form-select" required>
                                <option disabled selected>Seleccione la Evaluación</option>
                            </select>
                            <span asp-validation-for="Inventario.IdProducto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Inventario.TipoMovimiento" class="control-label">Tipo de Movimiento</label>
                            <input asp-for="Inventario.TipoMovimiento" id="acumulado1" class="form-control" />
                            <span asp-validation-for="Inventario.TipoMovimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Inventario.Cantidad" class="control-label">Cantidad</label>
                            <input asp-for="Inventario.Cantidad" id="Cantidad" class="form-control" />
                            <span asp-validation-for="Inventario.Cantidad" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="col-lg-4">
                        
                         <div class="form-group">
                        <label asp-for="Inventario.FechaMovimiento" class="control-label">Fecha de Movimiento</label>
                        <input type="date" asp-for="Inventario.FechaMovimiento" id="FechaNacimiento" pattern="\d{2}/\d{2}/\d{4}" placeholder="dd/mm/yyyy" class="form-control" />
                        <span asp-validation-for="Inventario.FechaMovimiento" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            <label asp-for="Inventario.ReferenciaDocumento" class="control-label">Referencia del Documento</label>
                            <input asp-for="Inventario.ReferenciaDocumento" id="acumulado2" class="form-control" />
                            <span asp-validation-for="Inventario.ReferenciaDocumento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Inventario.Descripcion" class="control-label">Descripción</label>
                            <input asp-for="Inventario.Descripcion" id="examen2" class="form-control" />
                            @* <span asp-validation-for="Inventario.Descripcion" class="text-danger"></span> *@
                        </div>

                        
                    </div>

                </div>


                <br />
                <!-- Botones -->
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>
