<div class="container mt-6">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-cash-coin"></i> Registro de Recibo de Caja Egresos</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="Egresos.NumeroRecibo" class="control-label">Número Recibo</label>
                            <input asp-for="Egresos.NumeroRecibo" value="@Model.SiguienteNumero" id="numeroRecibo" class="form-control" readonly />
                            <span asp-validation-for="Egresos.NumeroRecibo" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Egresos.Nombre" class="control-label">Páguese A:</label>
                            <input asp-for="Egresos.Nombre" id="monto" class="form-control" />
                            <span asp-validation-for="Egresos.Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Egresos.Monto" class="control-label">La Cantidad de:</label>
                            <input asp-for="Egresos.Monto" id="monto" class="form-control" />
                            <span asp-validation-for="Egresos.Monto" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Egresos.IdPeriodo" class="control-label">Año</label>
                            <select asp-for="Egresos.IdPeriodo"  asp-items="Model.periodo" class="form-select" required>
                                <option value="">Seleccione una Opción</option>
                               
                            </select>
                            <span asp-validation-for="Egresos.IdPeriodo" class="text-danger"></span>
                        </div>
                        <!-- Sección de Meses - Se muestra/oculta según el tipo de movimiento -->
                        <br />


                    </div>
                <div class="col-lg-6">

                    <div class="form-group">
                            <label asp-for="Egresos.Serie" class="control-label">Serie:</label>
                            <input asp-for="Egresos.Serie" id="serie" class="form-control" readonly value="A" />
                            <span asp-validation-for="Egresos.Serie" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            @{

                                var fechapago = DateTime.Now.ToString("dd/MM/yyyy");
                            }
                            <label asp-for="Egresos.FechaEmision" class="control-label">Fecha de Emisión</label>
                            <input type="text" asp-for="Egresos.FechaEmision" value="@fechapago" class="form-control" readonly />
                            <span asp-validation-for="Egresos.FechaEmision" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Egresos.Concepto" class="control-label">En Concepto:</label>
                            <select asp-for="Egresos.Concepto" asp-items="Model.tipoMovimientoSelectListItem" class="form-select" required>
                                <option value="">Seleccione una Opción</option>
                            </select>
                            <span asp-validation-for="Egresos.Concepto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Egresos.IdRecinto" class="control-label">Centro de Estudio</label>
                            <select asp-for="Egresos.IdRecinto" asp-items="Model.recintos" class="form-select" required>
                                <option value="">Seleccione una Opción</option>
                            </select>
                            <span asp-validation-for="Egresos.IdRecinto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Egresos.Descripcion" class="control-label">Observaciones</label>
                            <textarea asp-for="Egresos.Descripcion" class="form-control"></textarea>

                        </div>

                </div>
                    <!-- Modal -->
                    @*  <div class="modal fade" id="modalMeses" tabindex="-1" aria-labelledby="modalMesesLabel" aria-hidden="true">
                        <div class="modal-dialog">
