                                                     <input type="hidden" asp-for="@itemMeses.IdMes" /> *@
                    @* <input type="hidden" asp-for="mesesSelectListItem[i].Value" /> 
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="modal-footer">
