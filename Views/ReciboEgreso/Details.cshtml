@model WebColegio.Models.ViewModel.EgresoViewModel

@{
    Layout = null;
    ViewData["Title"] = "Impresión de Recibo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recibo de Caja - @Model.Egresos.NumeroRecibo</title>
    <style>
        /* CONTENEDOR estilo voucher */
        .voucher {
            width: 260px; /* tamaño típico de voucher/ticket */
            padding: 10px;
            margin: auto;
            font-family: "Courier New", monospace;
            font-size: 13px;
            border: 1px solid #000;
        }

        /* Encabezado */
        .v-header {
            text-align: center;
            border-bottom: 1px dashed #000;
            padding-bottom: 8px;
        }

            .v-header .title {
                font-weight: bold;
                font-size: 14px;
            }

            .v-header .sub {
                font-size: 12px;
            }

        /* Secciones */
        .v-section {
            border-bottom: 1px dashed #000;
            margin-top: 6px;
            padding-bottom: 6px;
        }

        /* Filas */
        .v-row {
            padding: 2px 0;
        }

        .center {
            text-align: center;
        }

        .bold {
            font-weight: bold;
        }

        /* Firma */
        .firma {
            margin-top: 15px;
            text-align: center;
        }

            .firma .line {
                border-top: 1px solid #000;
                width: 80%;
                margin: auto;
                margin-bottom: 4px;
            }

            .firma .txt {
                font-size: 12px;
            }

        /* Botón imprimir */
        .print-button {
            margin-top: 15px;
            padding: 6px 12px;
            font-size: 14px;
            cursor: pointer;
        }

        @@media print {
            .no-print {
                display: none;
            }
            /* Ajustar todo al ancho del voucher */
            .voucher {
                border: none;
                width: 220px;
            }
        }
    </style>
</head>
<body>
    @{
        var recinto = Model.recintos
        .FirstOrDefault(s => s.Value == Model.Egresos.IdRecinto.ToString());

    }
    <div class="voucher">

        <!-- Encabezado -->
        <div class="v-header">
            <div class="title">

                @recinto?.Text
            </div>
            @if (recinto?.Text == "COLEGIO PARROQUIAL SAN FRANCISCO JAVIER")
            {
                <div class="sub">VICARIA DE EDUCACIÓN CATÓLICA</div>
                <div class="sub">Ciudad Sandino, Plaza Padre Miguel, 2c. al Norte, Zona #4 Managua</div>
            }
            @if (recinto?.Text == "CENTRO EDUCATIVO PARROQUIAL SAN MIGUEL ARCANGEL")
            {
                <div class="sub">VICARIA DE EDUCACIÓN CATÓLICA</div>
                <div class="sub">Ciudad Sandino, Frente de donde fue la Bomba de la Ruta 172, Zona #11 Managua</div>
            }
        </div>
        <div class="v-section">
            <div class="v-row center bold">RECIBO DE CAJA</div>
            <div class="v-row">Serie: <span>@Model.Egresos.Serie</span></div>
            <div class="v-row">N°: <span>@Model.Egresos.NumeroRecibo</span></div>
        </div>
       

        @{
            var tipoMovimiento = Model.tipoMovimiento?.FirstOrDefault(a => a.IdTipoMovimiento == Model.Egresos.Concepto);
            var fecha = Model.Egresos.FechaRegistro = DateTime.Now;
            // var fechaemision=Model.PagosCaja.fe
        }
        <div class="v-section">
            <div class="v-row"><b>Páguese A:</b> <span>@Model.Egresos.Nombre</span></div>            
            @* <div class="v-row"><b>Fec Emisión:</b> <span>C$ @Model.PagosCaja.FechaEmision</span></div> *@
            <div class="v-row"><b>Fecha Pago:</b> <span>C$ @Model.Egresos.FechaRegistro.ToString("dd/MM/yyyy")</span></div>
            <div class="v-row"><b>En Concepto de:</b> <span>@tipoMovimiento?.Concepto, @Model.Egresos.Descripcion</span></div>
           
            <div class="v-row"><b>La cantidad de:</b> <span>C$ @Model.Egresos.Monto.ToString("N2")</span></div>
            @*  <div class="v-row"><b>En letras:</b><br />@Model.cantidadEnLetras (C$ @Model.PagosCaja.Monto)</div> *@
        </div>
      
        <!-- Fecha -->
        <div class="fecha">
            Managua: @fecha.Day de
            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(fecha.Month)
            del 20@{
                @fecha.ToString("yy")
            }
        </div>
        <div class="firma">
        <div class="line"></div>
        <div class="txt">Firma y Sello del Cajero</div>
        
    </div>
 </div>

    <!-- Botón de impresión (solo visible en navegador) -->
    <div class="no-print center">
        <button class="print-button " onclick="window.print()">🖨️ Imprimir</button>
        <a asp-action="Create" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

    </div>

    
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
<script src="~/js/limpiarcampos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["Mensaje"] != null)
{
    <script>
        Swal.fire({
            title: '@TempData["Tipo"]',
            text: '@TempData["Mensaje"]',
            icon: '@TempData["Tipo"]'
        });
    </script>
}